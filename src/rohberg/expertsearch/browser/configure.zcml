<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="rohberg.expertsearch">

  <!-- Set overrides folder for Just-a-Bunch-Of-Templates product -->
  <include package="z3c.jbot" file="meta.zcml" />
  <browser:jbot
      directory="overrides"
      layer="rohberg.expertsearch.interfaces.IRohbergExpertsearchLayer"
      />

  <!-- Publish static files -->
  <plone:static
      name="rohberg.expertsearch"
      type="plone"
      directory="static"
      />

  <browser:page
      name="expertsearch-controlpanel"
      for="Products.CMFPlone.interfaces.IPloneSiteRoot"
      class=".controlpanel.ExpertsearchControlPanelView"
      permission="cmf.ManagePortal"
      />
  <adapter
      factory="rohberg.expertsearch.browser.controlpanel.ExpertsearchControlPanel"
      name="expertsearch-controlpanel" />


</configure>
